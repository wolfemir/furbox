---
import { cn } from "../lib/utils";

const { class: className, ...restProps } = Astro.props;
---

<span class={cn("neon-text uppercase font-matrix tracking-wider", className)} {...restProps}>
    <slot />
</span>

<style>
    .neon-text {
        color: #00ff00;
        text-shadow:
            0 0 5px #00ff00,
            0 0 10px #00ff00,
            0 0 20px #00ff00,
            0 0 40px #00ff00;
    }
</style>
