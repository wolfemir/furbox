---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>Furbox - Coming Soon</title>
        <meta
            name="description"
            content="MEOW MEOW MEOW! Furbox is coming soon!"
        />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <link
            rel="preload"
            href="/fonts/MatrixType-Regular.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
        <link
            rel="preload"
            href="/fonts/inter-latin-400-normal.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
    </head>
    <body class="font-sans bg-background text-white">
        <slot />

        <script src="../scripts/neko.js"></script>
    </body>
</html>
