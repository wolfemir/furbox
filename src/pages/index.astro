---
import Layout from "../layouts/Layout.astro";
import NeonText from "../components/NeonText.astro";
import NeonButton from "../components/NeonButton.astro";
---

<Layout>
    <div
        class="flex flex-col p-8 w-full h-full min-h-dvh items-center gap-2 justify-center"
    >
        <div
            class="aspect-video w-full max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl 2xl:max-w-2xl"
        >
            <iframe
				title="cat"
                class="w-full h-full border-none"
                src="https://www.youtube-nocookie.com/embed/hvL1339luv0?autoplay=1&mute=0&modestbranding=1&iv_load_policy=3"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
            >
            </iframe>
        </div>
        <h2
            class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold mt-8 text-center font-matrix uppercase tracking-wider"
        >
            Welcome to
            <NeonText class="underline underline-offset-4"> Furbox </NeonText>
        </h2>

        <NeonButton class="mt-8 font-bold">Announcement</NeonButton>
    </div>
</Layout>
